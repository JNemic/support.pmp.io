.collapse.navbar-collapse
  %ul.nav.navbar-nav
    %li{class: active_tab(docs_path)}
      = link_to 'API Docs', docs_path
    - if current_user
      %li{class: active_tab(account_path)}
        = link_to 'Account', account_path
      %li{class: active_tab(credentials_path)}
        = link_to 'Credentials', credentials_path
  %ul.nav.navbar-nav.navbar-right
    - if current_user
      %li.dropdown
        %a.dropdown-toggle{href: '#', 'data-toggle' => 'dropdown'}
          = current_user['key']
          %span.caret
        %ul.dropdown-menu
          %li
            = link_to 'Add account', add_account_path
          %li.logout
            = link_to 'Logout', logout_path
          %li.divider
          %li.dropdown-header Switch accounts
          - current_users.each do |user|
            %li
              %a{href: switch_path(user['key'])}
                = user['key']
    - else
      %li{class: active_tab(login_path, register_path, forgot_path)}
        = link_to 'Login', login_path
