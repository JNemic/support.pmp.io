!!!
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{'http_equiv' =>'X-UA-Compatible', content: 'IE=Edge,chrome=1'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %title
      PMP Support
    = csrf_meta_tags
    /[if lt IE 9]
      %script{src: '//html5shim.googlecode.com/svn/trunk/html5.js'}
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
  %body{class: "#{controller_name} #{action_name}"}

    -# fixed navbar
    .navbar.navbar-pmp.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle{'data-collapse' => 'collapse', 'data-target' => '.navbar-collapse'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: root_path}
            PMP Support
        = render 'layouts/navbar'

    -# main content
    #main.container
      - if content_for?(:logbox)
        = render 'layouts/logbox'
      - elsif flash.alert
        .alert.alert-danger.alert-dismissable
          %button.close{'data-dismiss' => 'alert'} &times;
          = flash.alert
      - elsif flash.notice
        .alert.alert-pmp.alert-dismissable
          %button.close{'data-dismiss' => 'alert'} &times;
          = flash.notice
      = yield

    -# sticky footer
    #footer
      .container
        .row
          .col-sm-4
            %ul
              %li
                = link_to 'https://github.com/publicmediaplatform/pmp-issues/issues' do
                  %i.fa.fa-fw.fa-lg.fa-bug>
                  Issue Queue
              %li
                = link_to 'https://github.com/publicmediaplatform/pmpdocs/wiki' do
                  %i.fa.fa-fw.fa-lg.fa-code>
                  Documentation
              %li
                = link_to 'https://groups.google.com/forum/#!forum/pmp-dev' do
                  %i.fa.fa-fw.fa-lg.fa-envelope>
                  Mailing List
          .col-sm-4
            %ul
              %li
                = link_to 'http://publicmediaplatform.org' do
                  %i.fa.fa-fw.fa-lg.fa-bookmark>
                  publicmediaplatform.org
              %li
                = link_to 'http://twitter.com/pmpio' do
                  %i.fa.fa-fw.fa-lg.fa-twitter>
                  pmpio
          .col-sm-4
            %ul
              %li
                %p
                  &copy; 2014 Public Media Platform
