-# main form
- content_for :logbox do

  = form_tag(add_account_path) do
    = hidden_field_tag(:ga_client_id, '', class: 'ga-client-id')
    = raw negative_captcha(@captcha)
    - if flash.alert
      %span.help-block.text-danger
        != flash.alert
    - elsif flash.notice
      %span.help-block
        != flash.notice
    - else
      %span.help-block
        Enter another account login and password
    = render partial: 'hoster'
    = negative_text_field_tag(@captcha, :username, class: 'form-control', autofocus: true, required: true, placeholder: 'Username')
    = negative_password_field_tag(@captcha, :password, class: 'form-control', required: true, placeholder: 'Password')
    %button.btn.btn-lg.btn-pmp.btn-block{type: 'submit'}
      Add account
