-# main form
- sessdata = params[:session] || {}
- content_for :logbox do
  = form_tag(add_account_path) do
    - if flash.alert || flash.notice
      %span.help-block.text-danger
        = flash.alert || flash.notice
    - else
      %span.help-block
        Enter another account login and password
    = render partial: 'hoster'
    = text_field :session, :username, placeholder: 'Username', class: 'form-control', value: sessdata[:username]
    = password_field :session, :password, placeholder: 'Password', class: 'form-control', value: sessdata[:password]
    %button.btn.btn-lg.btn-pmp.btn-block{type: 'submit'}
      Add account
