-# main form
- content_for :logbox do

  = form_tag(login_path) do
    = hidden_field_tag(:ga_client_id, '', class: 'ga-client-id')
    - if flash.alert
      %span.help-block.text-danger
        != flash.alert
    - elsif flash.notice
      %span.help-block
        != flash.notice
    - else
      %span.help-block
        Please enter your account login and password
    = render partial: 'hoster'
    = text_field_tag(:username, nil, class: 'form-control', autofocus: true, required: true, placeholder: 'Username')
    = password_field_tag(:password, nil, class: 'form-control', required: true, placeholder: 'Password')
    %button.btn.btn-lg.btn-pmp.btn-block{type: 'submit'}
      Sign in

-# nav links
- content_for :logbox_links do
  = link_to forgot_path, class: 'pull-left' do
    %i.fa.fa-arrow-left
    Forgot password?
  = link_to register_path, class: 'pull-right' do
    Need an account?
    %i.fa.fa-arrow-right
